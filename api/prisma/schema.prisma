generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mesa {
  id        Int     @id @default(autoincrement())
  numero    Int
  descricao String?
  removido  Boolean @default(false)

  // Relacionamento 1:N — uma mesa pode ter várias comandas
  comandas Comanda[]
}

model Produto {
  id         Int     @id @default(autoincrement())
  nome       String
  descricao  String?
  quantidade Int
  preco      Decimal @db.Decimal(10, 2) 
  removido   Boolean @default(false)

  // Relacionamento N:M via tabela intermediária
  comandas Comanda_Produto[]
}

model Comanda {
  id           Int      @id @default(autoincrement())
  mesaId       Int
  dataAbertura DateTime @default(now())
  observacao   String?
  removido     Boolean  @default(false)

  // Relacionamento 1:N (lado N)
  mesa Mesa @relation(fields: [mesaId], references: [id])

  // N:M via tabela intermediária
  produtos Comanda_Produto[]
}

model Comanda_Produto {
  id         Int @id @default(autoincrement())
  comandaId  Int
  produtoId  Int
  quantidade Int @default(1)

  comanda Comanda @relation(fields: [comandaId], references: [id])
  produto Produto @relation(fields: [produtoId], references: [id])

  @@unique([comandaId, produtoId]) // um produto por comanda
  @@map("comanda_produto") // nome da tabela no banco
}
